@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Stock de productos</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="NuevoInventario"><i class="bi bi-plus"></i> Agregar Inventario</a>
        </div>
    </div>

    <div class="p-4 border rounded">
        <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Bodega</th>
                    <th>Producto</th>
                    <th>Costo</th>
                    <th>Stock</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {

    <script src="~/js/InventarioScripts.js"></script>

}


