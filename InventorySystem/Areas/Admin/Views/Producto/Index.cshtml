
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Listado de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Upsert"><i class="bi bi-plus"></i> Nuevo Producto</a>
        </div>
    </div>


    <div class="p-4 border rounded">
        <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>SerieId</th>
                    <th>Descripcion</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Padre</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

    @section Scripts {

        <script src="~/js/ProductoScripts.js"></script>

    }
