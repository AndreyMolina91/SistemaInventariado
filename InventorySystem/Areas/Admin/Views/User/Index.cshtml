
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-5">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Listado de Usuarios</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-user"></i><i class="fas fa-user-plus"></i> Crear Nuevo Usuario</a>
        </div>
    </div>

    <div class="p-4 border rounded">
        <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>UserName</th>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Email</th>
                    <th>Contacto</th>
                    <th>Roll</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

    @section Scripts {

        <script src="~/js/UserScripts.js"></script>

    }

