@model InventorySystem.Models.Bodega

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}


<form method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
    </div>

    @if (Model.Id != 0)
    {
        //Actualizar
        titulo = "Actualizar Bodega";
    }

    <div class="col-12 border-bottom" >
        <h2 class="text-primary">@titulo</h2>
    </div>
    <div class="col-8 pt-4">

        <!--Campo Nombre-->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre"></label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <!--Campo descripción-->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Descripcion"></label>
            </div>
            <div class="col-8">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <!--Campo Estado-->
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Estado"></label>
            </div>
            <div class="col-4">
                <select asp-for="Estado" class="form-control">
                    <option value=true>Activo</option>
                    <option value=false>Inactivo</option>
                </select>
            </div>
        </div>

        <!--Campo Botones de acciones-->
        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.Id != 0)
                {
                    <partial name="_BotonesUpdateBack" model="Model.Id" />
                }
                else
                {
                    <partial name="_BotonesCreateBack" />
                }
            </div>
        </div> 
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
            }
